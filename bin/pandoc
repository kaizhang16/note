#! /usr/bin/env bash

gitCommitDate=$(git show --format=%ci)

/usr/bin/pandoc \
  --from=markdown \
  --to=html \
  --mathjax \
  --bibliography=content/references.bib \
  --csl=china-national-standard-gb-t-7714-2015-numeric.csl \
  --metadata=link-citations:true \
  --table-of-contents \
  --template=templates/pandoc.html.template \
  --quiet \
  --metadata=toc-title:目录 \
  --metadata="git-commit-date:${gitCommitDate}"
